<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Molecula.Workflows.Designer.Controls">

    <ControlTemplate x:Key="WorkflowItemToolboxContainerControlTemplate" TargetType="controls:WorkflowItemToolboxContainerControl">
        <ContentPresenter Content="{TemplateBinding Content}"/>
    </ControlTemplate>

    <Style TargetType="controls:WorkflowItemToolboxContainerControl">
        <Setter Property="Template" Value="{StaticResource WorkflowItemToolboxContainerControlTemplate}" />
    </Style>

</ResourceDictionary>